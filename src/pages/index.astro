---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Main from '../components/Main.astro'
import Job from '../components/JobPar.astro';
import JobIn from '../components/jobIn.astro';
---

<Layout title="Welcome to Astro.">
	
	<div class="aurora">
		<Header/>
		<Main/>
		<JobIn
			roleWork="Proceso digital marketer"
			title="Dirigir el diseño de productos y la experiencia del usuario para una iniciativa empresarial mundial de Apple"
			categories={['Social meida', 'Management']}
			bgColor="#f7e6e6"
			textColor="#ed6665"
			description="Designing end-to-end features, initiating early product concepts, and driving product growth for an Apple hardware subscription program"
			textFooter="proximamente"
		/>
		
		<Job
			roleWork="Proceso digital marketer"
			title="Dirigir el diseño de productos y la experiencia del usuario para una iniciativa empresarial mundial de Apple"
			categories={['Product design', 'UI / UX design']}
			bgColor="#ffeef4"
			textColor="#dc95ba"
			description="Designing end-to-end features, initiating early product concepts, and driving product growth for an Apple hardware subscription program"
			textFooter="proximamente"
		/>
		<JobIn
		roleWork="Proceso digital marketer"
		title="Dirigir el diseño de productos y la experiencia del usuario para una iniciativa empresarial mundial de Apple"
		categories={['PVP', 'Branding de contenido', 'Networking estratégico', 'Targeting profesional']}
		bgColor="#eaf8e9"
		textColor="#73D3A0"
		description="Designing end-to-end features, initiating early product concepts, and driving product growth for an Apple hardware subscription program"
		textFooter="proximamente"
		/>
		<Job
			roleWork="Proceso digital marketer"
			title="Dirigir el diseño de productos y la experiencia del usuario para una iniciativa empresarial mundial de Apple"
			categories={['Product design', 'UI / UX design']}
			bgColor="#ffeef4"
			textColor="#dc95ba"
			description="Designing end-to-end features, initiating early product concepts, and driving product growth for an Apple hardware subscription program"
			textFooter="proximamente"
		/>
	</div>
	

	
</Layout>

<style is:global>

	.h{
		animation: fade linear both;
		animation-timeline: view();
		animation-range: entry 50% cover 50%;
	}

	.f{
		animation: fade_text linear both;
		animation-timeline: view();
		animation-range: entry 50% cover 50%;
	}
	@keyframes fade {
		from {
			transform: translateX(40%);
			opacity: .1;
		} to {
			transform: translateX(0);
			opacity: 1;
		}
	}		
	@keyframes fade_text {
		from {
			transform: translateX(-40%);
			opacity: .1;
		} to {
			transform: translateX(0%);
			opacity: 1;
		}
	}		
	
</style>



